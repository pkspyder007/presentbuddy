{
  "name": "presentbuddy",
  "version": "1.0.0",
  "description": "Prepare your screen for professional presentations with one click",
  "main": "dist-electron/main/index.js",
  "author": "Your Name",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "vite",
    "clean": "node scripts/clean.js",
    "build": "npm run clean && NODE_ENV=production tsc && vite build && electron-builder",
    "build:win": "npm run clean && NODE_ENV=production tsc && vite build && electron-builder --win",
    "build:mac": "npm run clean && npm run build:window-helper-addon && NODE_ENV=production tsc && vite build && electron-builder --mac",
    "build:linux": "npm run clean && NODE_ENV=production tsc && vite build && electron-builder --linux",
    "build:window-helper-addon": "cd native/window-helper-addon && npm install",
    "generate:icons": "cd assets/icons && ./generate-icons.sh",
    "preview": "vite preview",
    "electron:dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:pack": "electron-builder",
    "postinstall": "electron-builder install-app-deps && npm run build:window-helper-addon",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,json,css,md}\""
  },
  "dependencies": {
    "electron-updater": "^6.1.7"
  },
  "devDependencies": {
    "@types/node": "^20.10.6",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "electron": "^39.2.4",
    "electron-builder": "^24.9.1",
    "eslint": "^8.56.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "node-addon-api": "^7.0.0",
    "node-gyp": "^10.0.0",
    "postcss": "^8.4.32",
    "prettier": "^3.7.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.8",
    "vite-plugin-electron": "^0.28.0",
    "vite-plugin-electron-renderer": "^0.14.5",
    "wait-on": "^7.2.0"
  }
}
